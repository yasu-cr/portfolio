<div class="header">
  <div class="header-logo" style="<%= current_page?(new_user_session_path) ? 'text-align: center;' : '' %>">
    <a href="/">My Portfolio</a>
  </div>
  <div class="log-in">
    <% if user_signed_in? %>
      <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete } %>
    <% else %>
      <% unless current_page?(new_user_session_path) %> <!-- ログインページだけリンクを非表示 -->
        <%= render "devise/shared/links", resource_name: :user, devise_mapping: Devise.mappings[:user] %>
      <% end %>
    <% end %>
  </div>
</div>